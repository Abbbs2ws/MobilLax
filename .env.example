# 데이터베이스 설정
DB_HOST=localhost
DB_PORT=3306
DB_NAME=MobilLaxDB
DB_USERNAME=your_username_here  # 실제 DB 사용자명으로 교체
DB_PASSWORD=your_password_here  # 실제 DB 비밀번호로 교체

# JDBC URL 조합용
SPRING_DATASOURCE_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?serverTimezone=Asia/Seoul&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=${DB_USERNAME}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}

# 스프링 환경설정
SPRING_PROFILES_ACTIVE=dev  # 개발 환경에 맞게 수정
JPA_DDL_AUTO=update         # 'create', 'update', 'validate', 'none' 등 설정 가능
SHOW_SQL=true
FORMAT_SQL=true

# 서버 포트
SERVER_PORT=8080

# UTF-8 인코딩 강제 (View 문제 방지용)
SPRING_HTTP_ENCODING_CHARSET=UTF-8
SPRING_HTTP_ENCODING_ENABLED=true
SPRING_HTTP_ENCODING_FORCE=true

# 타임존 설정
SPRING_JACKSON_TIME_ZONE=Asia/Seoul

# JWT 또는 시크릿 키 (보안 관련 키)
JWT_SECRET_KEY=your_jwt_secret_key_here  # 실제 JWT 비밀 키로 교체

# 외부 API 키 (있다면)
GOOGLE_API_KEY=your_google_api_key_here  # 실제 API 키로 교체

# 로깅 레벨 설정
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE=DEBUG